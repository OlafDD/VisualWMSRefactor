@{
    ViewBag.Title = "Home Page";
}

<main class="uk-padding fondo-home">
    <div>
        <h1 class="uk-nav-center wms-color-secundario-letra wms-subtitulo-azul">Visual Warehouse Management System</h1>
    </div>
    <div class="uk-flex uk-margin-medium-bottom uk-flex-center">
        @*<div>
                <button class="uk-button uk-button-primary uk-margin-small-right">Product Line</button>
            </div>*@
        <div class="uk-flex uk-flex-center">
            <label class="uk-margin-small-right letra-blanca">Plant: </label>
            <select class="uk-select uk-width-small" aria-label="Select" id="plantas">
            </select>
        </div>
    </div>
    <div class="uk-child-width-expand@s uk-text-center uk-margin-large-top uk-margin-large-bottom" uk-grid>
        <div>
            <div class="uk-card uk-card-default uk-card-body uk-card-hover wms-borde-card" onclick="IrInventario()">
                <img src="~/Images/almacenamiento.png" />
                <h2>INVENTORY<br />(Inventario)</h2>
            </div>
        </div>
        <div>
            <div class="uk-card uk-card-default uk-card-body uk-card-hover wms-borde-card" onclick="IrRequerimientos()">
                <img src="~/Images/maquina-elevadora.png" />
                <h2>OPEN REQUESTS<br />(Ordenes abiertas)</h2>
            </div>
        </div>
        <div>
            <div class="uk-card uk-card-default uk-card-body uk-card-hover wms-borde-card" onclick="IrReceiving()">
                <img src="~/Images/valores.png" />
                <h2>MIN & MAX <br /> (Máximos y minimos)</h2>
            </div>
        </div>
    </div>
</main>

<script src="~/Scripts/Home/Home.js"></script>