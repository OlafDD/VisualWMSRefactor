            <li><a href="#"><span uk-pagination-previous></span></a></li>
            <li><a href="#">1</a></li>
                <li><a href="#"><span uk-pagination-next></span></a></li>
        </ul>*@
</main>

<div id="modal-parte-inv" class="uk-flex-top" uk-modal>
    <div class="uk-modal-dialog uk-modal-body uk-margin-auto-vertical uk-overflow-auto">
        <button class="uk-modal-close-default" type="button" uk-close></button>
        <div class="uk-overflow-auto">

            <table class="uk-table uk-table-divider">
                <thead>
                    <tr>
                        <th>Storage Bin</th>
                        <th>Material</th>
                        <th>Material Description</th>
                        <th>Total</th>
                        <th>Total Stock</th>
                        <th>GR Number</th>
                        <th>Storage unit</th>
                    </tr>
                </thead>
                <tbody id="tbodyTabla">
                </tbody>
            </table>
        </div>

    </div>
</div>

<div id="modal-foto-material" class="uk-flex-top" uk-modal>
    <div class="uk-modal-dialog uk-modal-body uk-margin-auto-vertical uk-overflow-auto">
        <button class="uk-modal-close-default" type="button" uk-close></button>
        <div class="uk-margin-top">
            <h3 id="titulo-material-foto" class="wms-footer"></h3>
            <span class="wms-footer">
                <img src="" id="foto-Material" />
            </span>
            <p id="descripcion-foto" class="wms-footer"></p>
        </div>
    </div>
</div>

