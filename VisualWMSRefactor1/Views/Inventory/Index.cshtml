
@{
    ViewBag.Title = "Inventario";
}

<main class="uk-padding">
    <div>
        <h1 class="uk-nav-center wms-color-secundario-letra wms-subtitulo-azul" id="plantaTituloInventario"></h1>
    </div>
    <div class="uk-flex uk-margin-medium-bottom uk-overflow-auto">
        <div class="uk-flex">
            <button class="uk-button uk-button-small" onclick="cargarInventario()" id="btnActualizar">Update</button>
        </div>
        <div class="uk-flex">
            <label class="uk-margin-large-left uk-margin-small-right">Storage type: </label>
            <div class="uk-flex" id="filtro-tipo-almacenamiento-inv">
            </div>
        </div>
        <div class="uk-flex">
            <label class="uk-margin-large-left uk-margin-small-right">Storage location: </label>
            <div class="uk-flex" id="filtro-localizar">
            </div>
        </div>
        <div class="uk-flex wms-borde-card">
            <label>
                Check all
                <input class="uk-checkbox uk-margin-small-left uk-margin-medium-right" type="checkbox" id="checkTodo" onclick="checkTodo()" checked>
            </label>
        </div>
    </div>
    <div class="uk-margin-bottom uk-flex">
        <label>Last update: </label>
        <label id="lastUpdate"></label>
        <label class="uk-margin-small-right uk-margin-left">Storage bin: </label>
        <select class="uk-select uk-width-small" aria-label="Select" id="filtroMaterialSelect" onchange="filtroMaterial()">
        </select>
    </div>
    <div id="inventario">

    </div>
